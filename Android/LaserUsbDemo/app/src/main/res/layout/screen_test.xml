<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screen_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <TextView
        android:id="@+id/receive_text"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/gray"
        android:textColor="@color/black"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_dev"
        android:layout_width="wrap_content"
        android:layout_height="50px"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:background="@color/RedColor"
        android:text="Disconnected"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_dev"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20px"
                android:text="Subject:"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/ed_sub"
                android:layout_width="600px"
                android:layout_height="150px"
                android:layout_marginLeft="20px"
                android:background="@color/gray"
                android:hint="Enter Subject"
                android:textColor="@color/black"
                android:textColorHint="@color/blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20px"
                android:text="Module No:"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/ed_device"
                android:layout_width="700px"
                android:layout_height="150px"
                android:layout_marginLeft="20px"
                android:background="@color/gray"
                android:hint="Enter Module Number"
                android:textColor="@color/black"
                android:textColorHint="@color/blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20px"
                android:text="Real D:"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/ed_real"
                android:layout_width="700px"
                android:layout_height="150px"
                android:layout_marginLeft="20px"
                android:background="@color/gray"
                android:hint="Enter real distance."
                android:textColor="@color/black"
                android:textColorHint="@color/blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="Measure D:"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10px"
                    android:layout_marginTop="10px"
                    android:layout_marginEnd="10px"
                    android:layout_marginBottom="10px"
                    android:background="@color/gray"
                    android:orientation="vertical">

                    <View style="@style/list_item_seperator_layout" />

                    <include layout="@layout/mea_list_title" />

                    <View style="@style/list_item_seperator_layout" />

                    <ListView
                        android:id="@+id/dis_list"
                        android:layout_width="match_parent"
                        android:layout_height="650px"
                        android:background="@color/gray"
                        android:divider="@color/black"
                        android:dividerHeight="1.0dp"
                        android:scrollbars="vertical" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLaserOn"
                android:layout_width="300px"
                android:layout_height="250px"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:layout_marginTop="25px"
                android:text="Laser On"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btnLaserOff"
                android:layout_width="90dp"
                android:layout_height="250px"
                android:layout_marginRight="50px"
                android:text="Laser Off"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btnCali"
                android:layout_width="300px"
                android:layout_height="250px"
                android:text="Cali./ Offset"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCleanDis"
                android:layout_width="300px"
                android:layout_height="250px"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:text="Clean All Distance"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btnLogOutPut"
                android:layout_width="300px"
                android:layout_height="250px"
                android:text="Log Output"
                android:textSize="16dp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="450px"
                android:layout_height="250px"
                android:layout_marginLeft="10px"
                android:textColor="@color/black"
                android:textSize="10dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>