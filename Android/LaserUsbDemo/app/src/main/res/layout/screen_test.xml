<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screen_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <TextView
        android:id="@+id/receive_text"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/gray"
        android:textColor="@color/black"
        android:textSize="12dp" />
    <LinearLayout
        android:id="@+id/top_title"
        android:layout_width="wrap_content"
        android:layout_height="50px"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/tv_ver"
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:textColor="@color/black"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/tv_dev"
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:background="@color/RedColor"
            android:text="Disconnected"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_title"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20px"
                android:text="Subject:"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/ed_sub"
                android:layout_width="600px"
                android:layout_height="150px"
                android:layout_marginLeft="20px"
                android:background="@color/gray"
                android:hint="Enter Subject"
                android:textColor="@color/black"
                android:textColorHint="@color/blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20px"
                android:text="Module No:"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/ed_device"
                android:layout_width="700px"
                android:layout_height="150px"
                android:layout_marginLeft="20px"
                android:background="@color/gray"
                android:hint="Enter Module Number"
                android:textColor="@color/black"
                android:textColorHint="@color/blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20px"
                android:text="Real D:"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/ed_real"
                android:layout_width="700px"
                android:layout_height="150px"
                android:layout_marginLeft="20px"
                android:background="@color/gray"
                android:hint="Enter real distance."
                android:textColor="@color/black"
                android:textColorHint="@color/blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="Measure D:"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10px"
                    android:layout_marginTop="10px"
                    android:layout_marginEnd="10px"
                    android:layout_marginBottom="10px"
                    android:background="@color/gray"
                    android:orientation="vertical">

                    <View style="@style/list_item_seperator_layout" />

                    <include layout="@layout/mea_list_title" />

                    <View style="@style/list_item_seperator_layout" />

                    <ListView
                        android:id="@+id/dis_list"
                        android:layout_width="match_parent"
                        android:layout_height="650px"
                        android:background="@color/gray"
                        android:divider="@color/black"
                        android:dividerHeight="1.0dp"
                        android:scrollbars="vertical" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLaserOn"
                android:layout_width="275px"
                android:layout_height="250px"
                android:layout_gravity="center"
                android:text="Laser On"
                android:textSize="14dp" />

            <Button
                android:id="@+id/btnLaserOff"
                android:layout_width="275px"
                android:layout_height="250px"
                android:layout_gravity="center"
                android:text="Laser Off"
                android:textSize="14dp" />

            <Button
                android:id="@+id/btnShots"
                android:layout_width="280px"
                android:layout_height="250px"
                android:layout_gravity="center"
                android:text="Shots"
                android:textSize="14dp" />

            <Button
                android:id="@+id/btnCali"
                android:layout_width="300px"
                android:layout_height="250px"
                android:layout_gravity="center"
                android:text="Cali./ Offset"
                android:textSize="14dp" />

            <ToggleButton
                android:id="@+id/btnDisEn"
                android:layout_width="300px"
                android:layout_height="250px"
                android:layout_gravity="center"
                android:checked="true"
                android:textOff="D_CAL OFF"
                android:textOn="D_CAL ON"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCleanDis"
                android:layout_width="310px"
                android:layout_height="250px"
                android:layout_gravity="center"
                android:layout_marginRight="5px"
                android:text="Clean Screen"
                android:textSize="14dp" />

            <Button
                android:id="@+id/btnLogOutPut"
                android:layout_width="320px"
                android:layout_height="250px"
                android:layout_gravity="center"
                android:text="Log Output"
                android:textSize="14dp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="500px"
                android:layout_height="250px"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btnForce"
                android:layout_width="250px"
                android:layout_height="250px"
                android:text="回連" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_gravity="center"
                android:text="grade:"/>

            <Spinner
                android:id="@+id/sp_grade"
                android:layout_width="550px"
                android:layout_height="250px"
                android:layout_marginLeft="10px"
                android:textColor="@color/black"
                android:textSize="10dp" />
            <Button
                android:id="@+id/btnSetGrade"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_gravity="center"
                android:text="Set" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50px"
                android:text="grade:" />

            <Spinner
                android:id="@+id/sp_grade_c"
                android:layout_width="350px"
                android:layout_height="250px"
                android:layout_marginLeft="10px"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="volt:" />

            <EditText
                android:id="@+id/ed_volt"
                android:layout_width="300px"
                android:layout_height="200px"
                android:layout_gravity="center"
                android:inputType="number"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnSet"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_gravity="center"
                android:text="Set" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>